@model FlowerShop.PRODUCT

@{
    ViewBag.Title = "Upload hình ảnh mới";
}

<h4>Upload hình ảnh mới cho sản phẩm : @Model.Product_Name</h4>


@using (Html.BeginForm("UpLoadNew2", "Image", FormMethod.Post,new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />

        <div class="form-group row d-flex justify-content-center">
            <b class="control-label col-md-2">Chọn hình ảnh</b>
            <div class="col-md-5">
                <input type="file" name="file" id="file" />
            </div>
        </div>

        <div class="form-group row d-flex justify-content-center">
            <div class="col-md-offset-2 col-md-5 d-flex justify-content-center">
                <input type="submit" value="Tải lên" class="btn btn-outline-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("<< Danh sách hình ảnh", "Index")
</div>
<div>
    <a href="@Url.Action("Index", "Home")"><i class="fas fa-home"></i> &nbsp; Về trang chủ !</a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


