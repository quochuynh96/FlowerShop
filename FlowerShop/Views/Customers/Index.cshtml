@model FlowerShop.CUSTOMER

@{
    ViewBag.Title = "Tài khoản";
}

<h6>Tài khoản : @Model.Customers_Email</h6>


@using (Html.BeginForm("UpdateInfo","Customers"))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @if (Model.Customers_Name.CompareTo("Admin") == 0)
    {
        <div class="form-group d-flex justify-content-center">
            <b class="control-label col-md-2">Mật khẩu</b>
            <div class="col-md-5">
                @Html.EditorFor(model => model.Customers_Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Customers_Password, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group d-flex justify-content-center">
            <div class="col-md-offset-2 col-md-5 d-flex justify-content-center">
                <input type="submit" value="Cập nhật" class="btn btn-outline-success" />
            </div>
        </div>
        <hr />
        <div class="row d-flex justify-content-start">
            <a href="@Url.Action("Index", "Product")" class="btn btn-outline-danger">
                <i class="fas fa-box-open"></i>&nbsp;Quản lý sản phẩm
            </a>
        </div>
        <div class="row d-flex justify-content-start mt-3">
            <a href="@Url.Action("getListOrder", "Order")" class="btn btn-outline-danger">
                <i class="fas fa-clipboard"></i>&nbsp;Quản lý đơn hàng
            </a>
        </div>
        <div class="row d-flex justify-content-start mt-3">
            <a href="@Url.Action("Index", "Image")" class="btn btn-outline-danger">
                <i class="fas fa-image"></i>&nbsp;Quản lý hình ảnh
            </a>
        </div>
    }
    else
    {
        <div class="form-group d-flex justify-content-center">
            <b class="control-label col-md-2">Tên người dùng</b>
            <div class="col-md-5">
                @Html.EditorFor(model => model.Customers_Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Customers_Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group d-flex justify-content-center">
            <b class="control-label col-md-2">Mật khẩu</b>
            <div class="col-md-5">
                @Html.EditorFor(model => model.Customers_Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Customers_Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group d-flex justify-content-center">
            <b class="control-label col-md-2">Số điện thoại</b>
            <div class="col-md-5">
                @Html.EditorFor(model => model.Customers_Phone, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Customers_Phone, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group d-flex justify-content-center">
            <b class="control-label col-md-2">Địa chỉ</b>
            <div class="col-md-5">
                @Html.EditorFor(model => model.Customers_Address, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Customers_Address, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group d-flex justify-content-center">
            <div class="col-md-offset-2 col-md-5 d-flex justify-content-center">
                <input type="submit" value="Cập nhật" class="btn btn-outline-success" />
            </div>
        </div>
        <hr />
        <div class="row d-flex justify-content-start mt-3">
            <a href="@Url.Action("getListOrder", "Order")" class="btn btn-outline-danger">
                <i class="fas fa-clipboard"></i>&nbsp;Danh sách đơn hàng
            </a>
        </div>
        <div class="row d-flex justify-content-start mt-3">
            <a href="@Url.Action("Index", "Cart")" class="btn btn-outline-danger">
                <i class="fas fa-shopping-cart"></i>&nbsp;Quản lý giỏ hàng
            </a>
        </div>
    }
</div>
}

<div class="mt-3">
    <a href="@Url.Action("Index", "Home")"><i class="fas fa-home"></i> &nbsp; Về trang chủ !</a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
